<%@title = "Iniciar sesión"%>
<section class="row desktop-wrapper">
  <div class="notices col-s-10 col-md-11">
    <%if flash[:notice]%>
      <p><%= flash[:notice]%></p>
    <%end%>
  </div>
  <div class="alert col-s-10 col-md-11">
    <%if flash[:alert]%>
      <p><%= flash[:alert]%></p>
    <%end%>
  </div>
  <div class="row col-s-10 col-md-11">
    <div class="title-wrapper col-s-12 col-md-12">
      <hr class="separador-desktop">
      <h1>Iniciar sesión</h1>
      <hr class="separador-mobile">
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"row login-form"}) do |f| %>

    <div class="field col-s-10 col-md-7">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-field col-s-12 col-md-12" %>
    </div>

    <div class="field col-s-10 col-md-7">
      <%= f.label "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "off", class:"login-field col-s-12 col-md-12"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field col-s-10 col-md-7">
        <%= f.check_box :remember_me %>
        <%= f.label "Recordar usuario" %>
      </div>
    <% end -%>

    <div class="actions col-s-10 col-md-7">
      <%= f.submit "CONTINUAR", class:"admin-button"%>
    </div>
  <% end %>
  <div class="col-s-10 col-md-7" style="margin-top: 2vh;">
    <%= render "users/shared/links" %>
  </div>
</section>
