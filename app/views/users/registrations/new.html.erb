<%@title = "Registro"%>
<section class="row body-wrapper desktop-wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:"row login-form"}) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation" class="alert col-s-10 col-md-11">
        <h2><%= resource.errors.count %> errores evitaron el registro:</h2>
        <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row col-s-10 col-md-11">

      <div class="title-wrapper col-s-12 col-md-12">
        <hr class="separador-desktop">
        <h1>Registro</h1>
        <hr class="separador-mobile">
      </div>
    </div>

    <div class="row col-md-11">
      <div class="field col-s-10 col-md-7">
        <%= f.label "Correo electrónico" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"register-field col-s-12 col-md-12" %>
      </div>

      <div class="field col-s-10 col-md-7">
        <%= f.label "Contraseña"%>
        <% if @minimum_password_length %>
        <em>(minimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",class:"register-field col-s-12 col-md-12" %>
      </div>

      <div class="field col-s-10 col-md-7">
        <%= f.label "Confirmar contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"register-field col-s-12 col-md-12" %>
      </div>

      <div class="actions col-s-10 col-md-7">
        <%= f.submit "CONTINUAR", class:"admin-button"%>
      </div>
    </div>


  <% end %>

</section>
